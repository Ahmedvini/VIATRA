# API Configuration
API_BASE_URL=http://localhost:8080/api/v1
WS_BASE_URL=ws://localhost:8080

# Environment
ENVIRONMENT=development

# Features
ENABLE_LOGGING=true
ENABLE_CRASHLYTICS=false
ENABLE_ANALYTICS=false

# Third-party Services (Development keys)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
FIREBASE_API_KEY=your_firebase_api_key

# Social Authentication
GOOGLE_CLIENT_ID=your_google_client_id
APPLE_CLIENT_ID=your_apple_client_id
FACEBOOK_APP_ID=your_facebook_app_id

# Push Notifications
FCM_SENDER_ID=your_fcm_sender_id
APNS_TEAM_ID=your_apns_team_id

# Deep Links
CUSTOM_URL_SCHEME=viatra
UNIVERSAL_LINK_DOMAIN=viatra.health

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Cache Configuration
CACHE_DURATION_MINUTES=30
MAX_CACHE_SIZE_MB=100

# Security
CERTIFICATE_PINNING_ENABLED=false
ROOT_DETECTION_ENABLED=false
DEBUG_MODE_DETECTION_enabled=true

# Localization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,ar

# UI Configuration
THEME_MODE=system
PRIMARY_COLOR=0xFF2196F3
ACCENT_COLOR=0xFF03DAC6

# Development Settings
MOCK_API_ENABLED=false
SLOW_ANIMATIONS=false
SHOW_PERFORMANCE_OVERLAY=false

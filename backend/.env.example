# Node.js Environment
NODE_ENV=development
PORT=8080

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/viatra_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=viatra_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH=your_redis_password
REDIS_DATABASE=0

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-storage-bucket-name

# Authentication & Security
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# File Upload
FILE_UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Third-party API Keys (stored in Secret Manager in production)
STRIPE_API_KEY=sk_test_your_stripe_key
TWILIO_AUTH_TOKEN=your_twilio_auth_token
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FIREBASE_API_KEY=your_firebase_api_key

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=false
ENABLE_SOCIAL_LOGIN=true

# Development Settings
DEBUG=true
MOCK_EXTERNAL_APIS=true

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_size = 2

[*.dart]
indent_size = 4

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.go]
indent_style = tab

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.tf]
indent_size = 2

[*.sql]
indent_size = 2
